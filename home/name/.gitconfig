# This is Git's per-user configuration file.
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    d = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[include]
    path = ~/.gitconfig.local
[core]
    editor = vim -f
    autocrlf = input
[push]
    default = simple
[merge]
    tool = vimdiff
